Config { font = "-misc-fixed-*-*-*-*-9-*-*-*-*-*-*-*"
       , bgColor = "#3f3f3f"
       , fgColor = "#dcdccc"
       , position = TopW L 100
       , lowerOnStart = True
       , commands = [ Run Weather "EDDP" ["-t","<tempC>C","-L","14","-H","22","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Cpu ["-L","3","-H","50","--low", "lightblue","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "%a %b %_d %k:%M" "date" 10
                    , Run StdinReader
		    , Run Battery ["-t","Bat: <left>"] 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% | %swap% | %battery% | %date% | %EDDP%"
       }
